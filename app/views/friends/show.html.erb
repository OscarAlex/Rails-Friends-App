<div class="container-fluid py-5 h-100 p-5 bg-light border rounded-3">
  <h1 class="display-5 fw-bold">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>

  <p class="col-md-8 fs-4">
  <strong>Email: </strong><%= @friend.email %>
  </p>
  <p class="col-md-8 fs-4">
  <strong>Phone: </strong><%= @friend.phone %>
  </p>
  <p class="col-md-8 fs-4">
  <strong>Twitter: </strong><%= @friend.twitter %>
  </p>
</div>

<br>
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
<%= link_to 'Delete', @friend, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' } %>

<br><br>
<%= link_to 'Back', friends_path, class:"btn btn-dark" %> 
